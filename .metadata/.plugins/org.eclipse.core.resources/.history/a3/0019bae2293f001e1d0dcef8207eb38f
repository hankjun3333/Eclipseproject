<body>
<form id="f" method="get" action="./js9-1.html" onsubmit="return abc()">
고객명 : <input type="text" name="uname"><br>
아이디 : <input type="text" name="uid"><br>
<input type="checkbox" name="agree" id="agree1" value="on">개인정보 제공 동의 <br>
<input type="hidden" name="agree" id="agree2"value="off">개인정보 제공 동의 <br>
<button>전송</button>
</form>
</body>

<script>
	function abc(){
		if(document.getElementById("agree1").checked){
			document.getElementById("agree2").disabled = true;
		}
		
		if(f.uname.value==""){
			alert("이름을 입력하세요");
			return false;
		}
		else if(f.uid.value==""){
			alert("아이디를 입력하세요");
			return false;
		}
		else{
			return true;
		}
	}
</script>
