<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>js-7에게 변수 배열로 데이터 보내는법</title>
</head>
<body>
<form id="f" method="get" action="./js7.html" onsubmit="return abc()">
검색어 : <input type="text" name="search"> <br>
카테고리: <input type="text" name="cate"> <br>
<input type="checkbox" id="ck1" name="ck" value=""> 개인정보 이용동의 <br>
<input type="hidden" id="ck1_hidden" name="ck" value="n">
<br>
<button>전송</button>
</form>
</body>
<script>
	/* */
	function abc(){
		if(f.search.value ==""){
			alert("검색어를 입력해주세요");
			return false;
		}
		else if(f.cate.value==""){
			alert("카테고리를 입력해주세요");
			return false;
		}
		else{
			return true;
		}
		if(document.getElementById("ck1").checked){
			document.getElementById("ck1_hidden").disabled =true;
		}
	}
</script>
</html>