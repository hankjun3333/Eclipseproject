package io;

import java.io.FileWriter;
import java.util.Scanner;

/* 응용문제1번 */
/* Scanner를 이용하여 사용자가 입력한 숫자를 모두 저장되도록 합니다.
   1~100까지의 숫자 중 한가지를 입력하세요? 라고 물어보기
   단, 한줄에 하나의 숫자가 입력 되도록 하며,quit란 명령어를 입력시 더이상
   프로세서는 작동되지 않도록 하시오.
   저장 파일명은 number.txt 으로 저장되도록 하시오. 
  */
public class file6 {

	public static void main(String[] args) {
		
		try {
			FileWriter fw = null;
			Scanner sc = null;
			
			fw = new FileWriter("D:\\project\\web\\src\\main\\webapp\\number.txt",true);
			sc = new Scanner(System.in);
			
			int f;
			for(;;) {
				System.out.println("1~100까지 숫자를 입력해주세요?");
				String name = sc.nextLine().intern();
				if(name == "quit") {
					break;
				}
				else if(name<=100 && name>=1){
					
				}
				else {
					fw.write(name);
				}
				System.out.println("모든 데이터 내용이 저장되었습니다.");
				sc.close();
				fw.close();
			}
		}
		catch(Exception e) {
			System.out.println(e);
			System.out.println("파일 오류 발생");
		}
			
		

	}

}
