package io;

import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.InputStream;
import java.io.OutputStream;

//Stream 사용한 이미지 처리 방법
public class file13 {

	public static void main(String[] args) {
		try {
			data11 d = new data11();
			d.abc();
		}
		catch(Exception e) {
			System.out.println(e);
		}

	}

}
class data11{
	public void abc() throws Exception{
		InputStream is = new FileInputStream("D:\\project\\web_example\\src\\main\\webapp\\image.jpg");
		
		System.out.println(is.available());
		byte [] file = new byte[is.available()];
		is.read();
		is.close();
		OutputStream os = new FileOutputStream("image2.jpg");
		//os.write(file); //어디서 부터 어디까지를 정해줘야 파일이 안꺠짐
		os.write(file,0,is.available());
		os.flush();
		os.close();
		
		
	}
}
