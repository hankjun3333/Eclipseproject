package javatest;

import java.util.*;

/*
  숙제 1:
  "개인정보 수집 및 이용동의 ( Y/N )"
  "이메일 수집 및 이용 동의 ( Y/N )"
  "통합 서비스 약관 이용 동의 ( Y/N )"
  해당 동의를 모두 Y 를 하였을 경우
  "서비스 이용 약관에 모두 동의 하셨습니다." 콘솔에 출력
  단, 하나라도 N이 적용시 다시 처음부터 약관동의 등의 내용이 출력 되도록합니다.
  
 */
public class work1 {

	public static void main(String[] args) {
		try {
			data33 d = new data33();
			d.abc();
		}
		catch(Exception e) {
			System.out.println(e);
		}

	}

}
class data33{
	Scanner sc = null;
	public void abc() throws Exception{
		System.out.println("개인정보 수집 및 이용동의 ( Y / N )");
		this.sc = new Scanner(System.in);
		String q1 = new String();
		q1 = this.sc.nextLine().intern();
		System.out.println("이메일 수집 및 이용 동의 ( Y / N )");
		String q2 = new String().intern();
		q2 = this.sc.nextLine();
		System.out.println("통합 서비스 약관 이용 동의 ( Y / N )");
		String q3 = new String();
		q3 = this.sc.nextLine().intern();
		
		while(true) {
			if(q1=="y"||q2=="y"||q3=="y") {
				System.out.println("정보가 잘 저장되었습니다.");
				break;
				System.exit(0);
			}
			else if(q1!="y" || q2!="y" || q3!="y"){
				System.out.println("y/n 을 입력해주세요!");
				
			}
		}
		
	}
}




