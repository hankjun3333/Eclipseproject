<body>
고객명 : <div id="uname" name="uname"></div>
아이디 : <div id="uid" name="uid"></div>
<input type="checkbox" id="ck11" name="ck" disabled>
</body>
<script>
	
	var uri = decodeURI(window.location.search);
	var ck = uri.split("&ck=");
	var uid = ck[0].split("&uid=");
	var uname = uid[0].split("?uname=");
	
	document.getElementById("uname").innerText = uname[1];
	document.getElementById("uid").innerText = uid[1];
	if(ck[1]=="y"){
		document.getElementById("ck11").checked = true;
	}
	else{
		document.getElementById("ck11").checked = false;
	}
</script>
</html>