package javatest;

import java.util.*;

/*
  숙제 1:
  "개인정보 수집 및 이용동의 ( Y/N )"
  "이메일 수집 및 이용 동의 ( Y/N )"
  "통합 서비스 약관 이용 동의 ( Y/N )"
  해당 동의를 모두 Y 를 하였을 경우
  "서비스 이용 약관에 모두 동의 하셨습니다." 콘솔에 출력
  단, 하나라도 N이 적용시 다시 처음부터 약관동의 등의 내용이 출력 되도록합니다.
  
 */
public class work1 {

	public static void main(String[] args) {
		
		try {
			data33 d = new data33();
			d.abc();
		}
		catch(Exception e) {
			System.out.println(e);
		}

	}

}
class data33{
	Scanner sc = null;
	
	public void abc() throws Exception{
		this.sc = new Scanner(System.in);
		System.out.println("개인정보 수집 및 이용동의 ( Y/N )");
		String data1 = sc.nextLine().intern();
		if(data1 =="" || data1 !="y" || data1 ==null) {
			System.out.println("개인정보 이용동의 y를 입력해주세요");
			new data33().abc();
			data1 = sc.nextLine().intern();
		}
		else if(data1 =="y" || data1=="Y"){
			System.out.println("이메일 수집 및 이용 동의 ( Y/N )");
		}
		
		String data2 = sc.nextLine().intern();
		if(data2 =="" || data2 !="y" || data2 ==null) {
			System.out.println("이메일 수집 및 이용 동의 y를 입력해주세요");
			data2 = sc.nextLine().intern();
		}
		else if(data2 =="y" || data2=="Y"){
			System.out.println("통합 서비스 약관 이용 동의 ( Y/N )");
		}
		
		String data3 = sc.nextLine().intern();
		if(data3 =="" || data3 !="y" || data3 ==null) {
			System.out.println("통합 서비스 약관 이용 동의 y를 입력해주세요");
			new data33().abc();
		}
		else if(data2 =="y" || data2=="Y"){
			System.out.println("정보가 잘 저장되었습니다.");
		}
	}
}




