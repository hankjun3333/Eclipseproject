package array_test;

//2차 배열을 1차 배열로 합산하는 것
public class array7 {

	public static void main(String[] args) {
		new array7().test();

	}
	//2차배열을 1차 배열로 만ㄷ르어버리는 것
	public void test() {
		int a[][] = {
				{1,3,5,7},
				{2,4,6,8}
		};
		int ea1 = a.length;//2
		int ea2 = a[0].length;//4
		int make = ea1 * ea2;
		int b[] = new int[make];
		
		for(int i[] : a) {
			for(int j: i) {
				System.out.println(j);
			}
		}
	}

}









