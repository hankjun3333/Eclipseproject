<!-- 함수 = 메소드 라고 알아두면 됨 ( 프론트 단에서 함수라고 불림
일반 함수 : 호출되는 형태의 함수
이벤트 핸들링 함수 : 핸들링 한다 즉, onclick onchange, onsubmit같은 것들
이벤트 버블링 함수 : 하위에서 상위오브젝트에 전달하는 형태! li > ul
버블링 함수 : 전체 동의 했는데 하위항목 하나라도 체크 아웃 시 전체 동의 해제
이벤트 캡쳐링함수? 상위 에서 하위 오브젝트를 전달하는 형태 버블링의 반대 형태
캡쳐링 함수 : 전체 동의 클릭시 체크 인이 되는 상황
리턴은 return

-->
<body>
	
숫자1 :	<input type="text" id="no1"><br>
숫자2 :	<input type="text" id="no2"><br>
	<button type="button" onclick="abc()">클릭</button>
	
</body>
<script>
		/* 
		응용문제1 숫자 1과 숫자 2에 다음과 같이 숫자값을 모두 입력합니다.
		예를 들어 숫자1에 1을넣고 숫자2에 10을 넣을 경우 
		1~10까지 모든 숫자를 더합니다. 결과값은 55가 출력 되도록 합니다.	
		 */
	function abc(){
		var no1 = document.getElementById("no1");
		var no2 = document.getElementById("no2");
		var i=no1.value;
		var total=0;;
		for(i; i<=no2.value; i++){
			total += Number(i);
		}
		console.log(total);
		
	}
	var a = "전역변수";
	function aaa(){
		var b = "지역변수";
		console.log(a);
	}
	aaa();
	
	function bbb(){
		var b = "지역변수";
		console.log(a);
	}
</script>
