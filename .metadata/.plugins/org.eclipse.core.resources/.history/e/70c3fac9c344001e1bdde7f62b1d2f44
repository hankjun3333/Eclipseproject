package javatest;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.util.Scanner;

public class work4 {

	public static void main(String[] args) {
		try {
			Scanner sc = null;
			Connection ct = null;
			dbconfig33 d = new dbconfig33();
			d.info();
			ct = d.info();
			System.out.println(ct.toString());
			System.out.println("(일반고객 -일반 , 사업자 고객 - 사업자 라고 입력해주세요)");
			String client_ck  = sc.nextLine().intern();			
			if(client_ck =="일반고객" || client_ck =="일반") {
				System.out.println("id를 입력해주세요");
				String id = sc.nextLine().intern();
				String pass = sc.nextLine().intern();
				String name = sc.nextLine().intern();
				String tel = sc.nextLine().intern();
				String mail = sc.nextLine().intern();
				String num = sc.nextLine().intern();				
				
				
				String insert = "insert into client values('0','')";
				PreparedStatement ps = ct.prepareStatement(insert);
				int oksign = ps.executeUpdate();
				
				if(oksign ==1) {
					System.out.println("저장이 잘된듯");
					ps.close();
					ct.close();
					sc.close();
				}
				else {
					System.out.println("저장 잘안됨 문제있음");
				}
			}
			else if(client_ck =="사업자고객" || client_ck =="사업자") {
				String insert = "insert into b_client values('0')";
			}
			
		}
		catch(Exception e) {
			System.out.println(e);
		}

	}

}
class dbconfig33{
	
	public static Connection info() throws Exception{
		String db_drive = "com.mysql.jdbc.Driver";
		String db_url = "jdbc:mysql://localhost:3306/client";
		String db_user = "pbj";
		String db_pass = "a1234";
		
		Class.forName(db_drive);
		Connection con = DriverManager.getConnection(db_url,db_user,db_pass);
		return con;
	}
}