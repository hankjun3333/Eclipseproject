package array_test;

import java.util.Arrays;

//1차 배열 중 필요한 데이터 만 추출하여 신규 배열로 커스텀하는 방법
public class array4 {

	public static void main(String[] args) {
		new array4().test2();

	}
	//b[] 에서 짝수 데이터만 a로 집어넣는 연습
	public void test2() {
		int a[] = new int[5];
		int b[] = {1,2,3,4,5,6,7};
		
		int w = 0;
		int array =0;
		while(w<b.length) {
			if(b[w]%2 == 0) {
				a[array] = b[w];
				array++;
			}
			w++;
		}
		System.out.println(Arrays.toString(a));
	}

}
