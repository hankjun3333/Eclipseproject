import java.io.FileWriter;
import java.io.IOException;

public class NumberInputHelper {
    public static void writeNumbersToFile() {
        Scanner scanner = new Scanner(System.in);
        FileWriter fileWriter = null;

        try {
            fileWriter = new FileWriter("data_num.txt");

            for (int i = 0; i < 10; i++) {
                System.out.print("숫자를 입력하세요: ");
                int num = scanner.nextInt();

                if (num < 1 || num > 100) {
                    System.out.println("100까지의 숫자만 입력이 가능합니다.");
                    i--; // Retry for the same position
                    continue;
                }

                fileWriter.write(num + "\n");
            }

            System.out.println("입력이 완료되었습니다.");

        } catch (IOException e) {
            e.printStackTrace();
        } finally {
            scanner.close();

            if (fileWriter != null) {
                try {
                    fileWriter.close();
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }
        }
    }
}