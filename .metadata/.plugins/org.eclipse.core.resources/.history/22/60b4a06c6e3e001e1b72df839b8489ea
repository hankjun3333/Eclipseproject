<script>
	function abc(e){
		console.log(e);
		var i=1;
		while(i<=6){
			document.getElementById("c"+i).checked = e;
			i++;
		}
	}
	function bbb(z){
		var aa = document.getElementById("all");
		var w = 1;
		var check = true;
		while(w<=6){
			if(document.getElementById("c"+w).checked==false){
				aa.checked = true;
			}
			w++;
		}
	}
</script>
