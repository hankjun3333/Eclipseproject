<form id="f" method="post" action="./calok.do">
첫번째 숫자<input type="text" name="data1" id="no1"><br>
두번째 숫자<input type="text" name="data2" id="no2"><br>
<input type="button" value="전송" onclick="abc()">
</form>

<script>
	function abc(){
		//console.log("test");
		//name = data1, data2 는 servlet 컨트롤러 단에서 받음
		// view 단에선 id를 변수로 담는다
		var no1 = document.getElementById("no1");
		var no2 = document.getElementById("no2");
		if(no1.value == ""){
			alert("첫번째 숫자 값을 입력하세요");
			
		}
		else if(no2.value =="") {
			alert("두번째 숫자 값을 입력하세요");
			no2.focus();
		}
		else{
			f.submit();
		}
	}
</script>
