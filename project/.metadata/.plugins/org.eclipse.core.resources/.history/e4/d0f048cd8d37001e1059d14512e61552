package array_test;

import java.util.Arrays;

//2차 배열을
public class array7 {

	public static void main(String[] args) {
		new array7().test();
	}
	//2차 배열을 1차 배열로 만들어보자
	public void test() {
		int a[][] = {
				{1,3,5,7},
				{2,4,6,8}
		};
		int ea1 = a.length;
		System.out.println(ea1);
		int ea2 = a[0].length;
		System.out.println(ea2);
		int ea3 = ea1*ea2;
		System.out.println(ea3);
		int b[] = new int[ea3];
		int count=0;
		for(int k[] : a) {
			for(int j : k) {
				//System.out.println(j);
				b[count] = j;
				count++;
			}
		}
		System.out.println(Arrays.toString(b));
		Arrays.sort(b);
		System.out.println(Arrays.toString(b));
	}

}
